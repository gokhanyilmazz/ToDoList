@using System.Security.Claims
<div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Yeni Görev Ekle</h5>
                <button type="button" id="btnHideModal" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="col-form-label">Bitiş Tarihi:</label>
                        <input id="enddate" type="date" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Görev Açıklaması:</label>
                        <textarea id="description" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnKapat" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button type="button" id="btnGonder" class="btn btn-primary">Görev Ekle</button>
            </div>
        </div>
    </div>
</div>
